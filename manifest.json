{
  "manifest_version": 3,
  "name": "Summarizer",
  "description": "Webページの要約を表示するChrome拡張機能",
  "version": "1.0",
  "icons": {
    "16": "icons/cute_Clione.png",
    "48": "icons/loose_Octopus.png",
    "128": "icons/basking_penguin.png"
  },
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/Summarizer.js"
      ]
    }
  ]
}