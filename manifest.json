{
    "manifest_version": 2,
    "name": "Summarizer",
    "description": "Webページの要約を表示するChrome拡張機能",
    "version": "1.0",
    "icons": {
      "16": "かわいいクリオネ.png",
      "48": "日向ぼっこなペンギンさん.png",
      "128": "ゆるいタコさん.png"
    },
    "permissions": [
      "https://api.openai.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Summarizer.js"]
      }
    ]
  }