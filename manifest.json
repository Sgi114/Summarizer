{
    "name": "Abstarctor",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Webページの内容を要約するツールです。",
    "browser_action": {
      "default_title": "Webページ要約ツール",
      "default_icon": "icon.png"
    },
    "permissions": ["activeTab", "http://*/*", "https://*/*"],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content_script.js"]
      }
    ]
  }